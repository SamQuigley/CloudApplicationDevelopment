<p id="notice"><%= notice %></p>

<h1>Primes</h1>

<table>
  <thead>
    <tr>
      <th>Primenum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @primes.each do |prime| %>
      <tr>
        <td><%= prime.primenum %></td>
        <td><%= link_to 'Show', prime %></td>
        <td><%= link_to 'Edit', edit_prime_path(prime) %></td>
        <td><%= link_to 'Destroy', prime, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Prime', new_prime_path %>
